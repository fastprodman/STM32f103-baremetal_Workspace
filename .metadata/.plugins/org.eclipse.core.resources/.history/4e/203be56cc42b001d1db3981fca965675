//	systickDelayMs(100);
//	ssd1306_writeCommand(0xA4);
//	systickDelayMs(100);
//	ssd1306_writeCommand(0xAF);
}


void ssd1306_writeCommand(char data){
	char dta[1];
	dta[0]= data;
	I2C1_burstWrite(DEVID, CTL_COMMAND, 1, dta);
	systickDelayMs(100);
}
