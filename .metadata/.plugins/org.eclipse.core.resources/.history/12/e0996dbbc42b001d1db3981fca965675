#include "ssd1306.h"
#include "systick.h"

#define DEVID		0x3C
#define CTL_COMMAND	0x00
#define DISP_FULL	0xA5
#define DISP_ON		0xAF
#define INVERSE		0xA7
#define HEIGHT		0x1F

void ssd1306_displayTest(void){

}


void ssd1306_writeCommand(char data){
	char dta[1];
	dta[0]= data;
	I2C1_burstWrite(DEVID, CTL_COMMAND, 1, dta);
	systickDelayMs(100);
}
